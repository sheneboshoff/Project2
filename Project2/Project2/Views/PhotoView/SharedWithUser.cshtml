@model System.Data.DataTable

@{
    ViewData["Title"] = "Shared With Me";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Creator
            </th>
            <th>
                Geolocation
            </th>
            <th>
                Tags
            </th>
            <th>
                Capture Date
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
        <tr>
            <td>
                @Model.Rows[i]["Creator"]
            </td>
            <td>
                @Model.Rows[i]["Photo_Name"]
            </td>
            <td>
                @Model.Rows[i]["Photo_Geolocation"]
            </td>
            <td>
                @Model.Rows[i]["Photo_Tags"]
            </td>
            <td>
                @Model.Rows[i]["Photo_CaptureDate"]
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.Rows[i]["PhotoId"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PhotoId"]">Delete</a> |
                <a asp-action="DownloadFile" asp-route-id="@Model.Rows[i]["Photo_Name"]">Download</a>
            </td>
        </tr>
        }
    </tbody>
</table>