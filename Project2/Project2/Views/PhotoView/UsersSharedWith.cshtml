@model System.Data.DataTable

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ShareWith">
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["FirstName"]
                </td>
                <td>
                    @Model.Rows[i]["LastName"]
                </td>
                <td>
                    @Model.Rows[i]["Email"]
                </td>
                <td>
                    <a id="item.UserId" asp-action="RemoveAccess" asp-route-id="@Model.Rows[i]["Email"]">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
