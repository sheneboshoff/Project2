@model System.Data.DataTable

@{
    ViewData["Title"] = "My Photos";
}

<h1>@ViewData["Title"]</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Geolocation
            </th>
            <th>
                Tags
            </th>
            <th>
                Capture Date
            </th>
            <th>
                <a asp-action="Create">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i < Model.Rows.Count; i++) {
        <tr>
            <td>
                @Model.Rows[i]["Photo_Name"]
            </td>
            <td>
                @Model.Rows[i]["Photo_Geolocation"]
            </td>
            <td>
                @Model.Rows[i]["Photo_Tags"]
            </td>
            <td>
                @Model.Rows[i]["Photo_CaptureDate"]
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.Rows[i]["PhotoId"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["PhotoId"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
