@model IEnumerable<Project2.Models.PhotoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Format)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Geolocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_CaptureDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Format)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Geolocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_CaptureDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhotoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhotoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhotoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
