@model IEnumerable<Project2.Models.Photo>

@{
    ViewData["Title"] = "Index";
}

<h4>Photos</h4>
<hr />


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Format)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Geolocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo_CaptureDate)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Add New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Format)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Geolocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo_CaptureDate)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.PhotoId"><i class="fa-plus-square fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.PhotoId">Share</a> |
                <a asp-action="Delete" asp-route-id="@item.PhotoId" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this photo?')"><i class="fa-lg fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
