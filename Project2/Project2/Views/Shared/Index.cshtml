@model IEnumerable<Project2.Models.BlobViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.ActionLink("Upload to Azure Blob", "UploadBlob", new { controller = "Blob" }, new { @class = "btn btn-link" })
    <div class="table table-striped table-responsive">
        <table id="table">
            <thead>
                <tr>
                    <th>Container</th>
                    <th>Actual File Name</th>
                    <th>Uri</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                <tr id="row_@item.PrimaryUri">
                    <td>@item.BlobContainerName</td>
                    <td>@item.ActualFileName</td>
                    <td>
                        <a href=@item.PrimaryUri>@item.PrimaryUri</a>
                    </td>
                    @*<td>@Html.ActionLink("Remove", "DeletedBlob", new { controller = "Blob", file = item.FileNameWithoutExt, extension = item.FileNameExtOnly })</td>*@
                    <td>@Html.ActionLink("Downlaod", "DownloadBlob", new { controller = "Blob", file = item.FileNameWithoutExt, extension = item.FileNameExtOnly })</td>
                    <td>
                        <input type="submit" href="#" class="btn btn-link" id="btndel" value="Remove" data-id="@item.ActualFileName" />
                    </td>
                </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

